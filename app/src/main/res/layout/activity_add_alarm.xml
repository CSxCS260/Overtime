<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAlarm">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Title"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/titleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/material_on_surface_emphasis_medium"
        android:textSize="30dp"/>


    <TextView
        android:id="@+id/timeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleET"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Time"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/timeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeTV"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/material_on_surface_emphasis_medium"
        android:textSize="30dp"
        android:editable="false"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/daysChipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">
        <com.google.android.material.chip.Chip
            android:id="@+id/sundayChip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="S"
            app:checkedIconVisible="false"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/mondayChip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="M"
            app:checkedIconVisible="false"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/tuesdayChip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="T"
            app:checkedIconVisible="false"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/wednesdayChip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="W"
            app:checkedIconVisible="false"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/thursdayChip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="T"
            app:checkedIconVisible="false"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/fridayChip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="F"
            app:checkedIconVisible="false"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/saturdayChip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="S"
            app:checkedIconVisible="false"/>
    </com.google.android.material.chip.ChipGroup>


    <TextView
        android:id="@+id/destinationTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/daysChipGroup"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Destination"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/destinationET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/destinationTV"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/material_on_surface_emphasis_medium"
        android:textSize="30dp"
        android:text="Nothing yet..."
        android:editable="false"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/addMapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/destinationET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        app:layout_constraintTop_toBottomOf="@id/addMapView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="@color/purple_500"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/doneFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/purple_500"
        android:src="@android:drawable/star_big_off"/>
</androidx.constraintlayout.widget.ConstraintLayout>